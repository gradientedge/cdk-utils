{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "esnext",
    "typeRoots": ["node_modules/@types", "./node_modules"],
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "app/**/*.ts",
    "src/test/cloudflare/services/zone-manager.test.ts1",
    "src/test/cloudflare/services/worker-manager.test.ts1",
    "src/test/cloudflare/services/rule-set-manager.test.ts1",
    "src/test/cloudflare/services/record-manager.test.ts1",
    "src/test/cloudflare/services/page-manager.test.ts1",
    "src/test/cloudflare/services/firewall-manager.test.ts1",
    "src/test/cloudflare/services/argo-manager.test.ts1",
    "src/test/cloudflare/services/api-shield-manager.test.ts1",
    "src/test/cloudflare/services/access-manager.pulumi.test.ts1",
    "src/test/cloudflare/construct/worker-site.test.ts1",
    "src/test/cloudflare/construct/pages-static-site.test.ts1",
    "src/test/cloudflare/common/common-cloudflare-construct.test.ts1"
  ]
}
