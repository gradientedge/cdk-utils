{
  "source": {
    "includePattern": "\\.(ts|tsx)$",
    "excludePattern": ".+\\.(test|spec).(t|j)s(doc|x)?$",
    "exclude": [
      "__snapshots__",
      "__tests__",
      "build",
      "coverage",
      "logo",
      "node_modules",
      "private",
      "public"
    ]
  },
  "plugins": ["plugins/markdown", "plugins/summarize", "node_modules/better-docs/typescript"],
  "opts": {
    "destination": "api-docs/",
    "readme": "README.md",
    "recurse": true,
    "tutorials": "docs/",
    "template": "node_modules/better-docs"
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  }
}
