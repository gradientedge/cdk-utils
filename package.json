{
  "name": "@gradientedge/cdk-utils",
  "version": "3.0.0",
  "description": "Utilities for AWS CDK provisioning",
  "main": "dist/index.js",
  "engines": {
    "node": ">=12.16.0 <15"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gradientedge/cdk-utils.git"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "keywords": [
    "gradientedge",
    "aws"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gradientedge/cdk-utils/issues"
  },
  "homepage": "https://github.com/gradientedge/cdk-utils#readme",
  "scripts": {
    "build": "rimraf dist/ && npx tsc",
    "ci": "yarn install --frozen-lockfile && yarn build && yarn validate && yarn docs",
    "docs": "rimraf api-docs/ && npx typedoc",
    "fix": "yarn prettify && eslint --fix **/*.ts",
    "prettier": "npx prettier --check \"**/*.{ts,json}\"",
    "prettify": "npx prettier --write \"**/*.{ts,json}\"",
    "test": "yarn build && npx jest --expand --updateSnapshot --passWithNoTests",
    "validate": "yarn prettier && yarn test",
    "watch": "npx tsc --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn validate && yarn prettify"
    }
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "coverage",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda-python-alpha": "2.1.0-alpha.0",
    "@types/lodash": "^4.14.175",
    "@types/node": "^16.10.2",
    "app-root-path": "^3.0.0",
    "aws-cdk-lib": "^2.1.0",
    "aws-sdk": "^2.997.0",
    "constructs": "^10.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "nconf": "^0.11.3",
    "pluralize": "^8.0.0",
    "ts-node": "^10.2.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "aws-cdk": "*",
    "babel-eslint": "^10.1.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "jest-junit": "^12.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.20.34",
    "typedoc-neo-theme": "^1.1.1",
    "typedoc-plugin-mermaid": "^1.3.0",
    "typescript": "4.2.3"
  },
  "optionalDependencies": {
    "@babel/core": "^7.15.5",
    "prop-types": "^15.7.2"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com/"
  }
}
