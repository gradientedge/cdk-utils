{
  "name": "@gradientedge/cdk-utils",
  "version": "0.0.0-SNAPSHOT",
  "description": "Utilities for AWS CDK provisioning",
  "main": "dist/index.js",
  "engines": {
    "node": ">=14.16.0 <17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gradientedge/cdk-utils.git"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "keywords": [
    "gradientedge",
    "cdk",
    "awscdk"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gradientedge/cdk-utils/issues"
  },
  "homepage": "https://github.com/gradientedge/cdk-utils#readme",
  "scripts": {
    "build": "rimraf dist/ && npx tsc && npx lerna run build",
    "build:production": "rimraf dist/ && npx tsc -p tsconfig.prd.json && npx lerna run build",
    "ci": "yarn install --frozen-lockfile && yarn build && yarn validate && yarn docs",
    "cz": "npx cz",
    "docs": "rimraf api-docs && npx jsdoc --pedantic -c jsdoc.json .",
    "lint": "yarn prettify && eslint **/*.ts --max-warnings=0",
    "fix": "yarn prettify && eslint --fix **/*.ts",
    "postinstall": "npx lerna run init",
    "prettier": "npx prettier --check \"**/*.{ts,json,md}\"",
    "prettify": "npx prettier --write \"**/*.{ts,json,md}\"",
    "test": "rimraf coverage && npx jest --ci --runInBand",
    "validate": "yarn prettier && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettify && yarn validate"
    }
  },
  "dependencies": {
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.6.4",
    "app-root-path": "^3.0.0",
    "aws-cdk-lib": "^2.35.0",
    "aws-sdk": "^2.1189.0",
    "constructs": "^10.1.67",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "nconf": "^0.12.0",
    "pluralize": "^8.0.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "aws-cdk": "*",
    "babel-eslint": "^10.1.0",
    "better-docs": "^2.7.2",
    "codecov": "^3.8.3",
    "commitizen": "^4.2.5",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-extended": "^3.0.2",
    "jest-junit": "^14.0.0",
    "jsdoc": "^3.6.11",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-mermaid": "^1.0.0",
    "lerna": "^5.3.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "4.7.4"
  },
  "optionalDependencies": {
    "@babel/core": "^7.18.10",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
